<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.FeedbackActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="168dp"
        android:layout_marginTop="178dp"
        android:layout_marginEnd="186dp"
        android:layout_marginBottom="480dp"
        android:hint="피드백"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--<Button
        android:id="@+id/tts_Btn"
        android:layout_width="120sp"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginTop="64dp"
        android:backgroundTint="@color/pastel_rainbow7"
        android:fontFamily="@font/sehwace"
        android:text="읽기"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"/>-->

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/goCalBtn"
            android:layout_gravity="center"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_weight="1"
            android:background="#00ff0000"
            android:backgroundTint="#FDF6FE"
            android:src="@drawable/calendar"
            android:visibility="visible"
            app:cornerRadius="20dp"
            tools:visibility="visible"/>

        <ImageView
            android:id="@+id/goListBtn"
            android:layout_gravity="center"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_weight="1"
            android:background="#00ff0000"
            android:backgroundTint="#FDF6FE"
            android:src="@drawable/calendarlist"
            android:visibility="visible"
            app:cornerRadius="20dp"
            tools:visibility="visible"/>

        <ImageView
            android:id="@+id/goChart"
            android:layout_gravity="center"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_weight="1"
            android:background="#00ff0000"
            android:backgroundTint="#FDF6FE"
            android:src="@drawable/chart"
            android:visibility="visible"
            app:cornerRadius="20dp"
            tools:visibility="visible"/>

        <ImageView
            android:id="@+id/goSocial"
            android:layout_gravity="center"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_weight="1"
            android:background="#00ff0000"
            android:backgroundTint="#FDF6FE"
            android:src="@drawable/social"
            android:visibility="visible"
            app:cornerRadius="20dp"
            tools:visibility="visible"/>

        <ImageView
            android:id="@+id/goMypage"
            android:layout_gravity="center"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_weight="1"
            android:background="#00ff0000"
            android:backgroundTint="#FDF6FE"
            android:src="@drawable/mypage"
            android:visibility="visible"
            app:cornerRadius="20dp"
            tools:visibility="visible"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>