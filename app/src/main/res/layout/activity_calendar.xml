<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbarSize="25dp"
    tools:context=".view.CalendarActivity">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FDF6FE"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/calendarPreBtn"
                android:layout_width="wrap_content"
                android:layout_height="55sp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:backgroundTint="@color/pastel_rainbow7"
                android:src="@drawable/ic_pre" />

            <TextView
                android:id="@+id/calendarMonthYearText"
                android:layout_width="0dp"
                android:layout_height="53sp"
                android:layout_gravity="center"
                android:layout_weight="3"
                android:background="@color/pastel_color1"
                android:fontFamily="@font/NanumBarunGothic"
                android:gravity="center"
                android:text="4월 2021"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="28sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/calendarNextBtn"
                android:layout_width="wrap_content"
                android:layout_height="55sp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:backgroundTint="@color/pastel_rainbow7"
                android:src="@drawable/ic_next" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="0dp"
                android:layout_height="30sp"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@color/gray"
                android:fontFamily="@font/NanumBarunGothic"
                android:text="일"
                android:textAlignment="center"
                android:textColor="#F75D59"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="0dp"
                android:layout_height="30sp"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@color/gray"
                android:fontFamily="@font/NanumBarunGothic"
                android:text="월"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="0dp"
                android:layout_height="30sp"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@color/gray"
                android:fontFamily="@font/NanumBarunGothic"
                android:text="화"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="0dp"
                android:layout_height="30sp"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@color/gray"
                android:fontFamily="@font/NanumBarunGothic"
                android:text="수"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="0dp"
                android:layout_height="30sp"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@color/gray"
                android:fontFamily="@font/NanumBarunGothic"
                android:text="목"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="0dp"
                android:layout_height="30sp"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@color/gray"
                android:fontFamily="@font/NanumBarunGothic"
                android:text="금"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="0dp"
                android:layout_height="30sp"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@color/gray"
                android:fontFamily="@font/NanumBarunGothic"
                android:text="토"
                android:textAlignment="center"
                android:textColor="#1569C7"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/calenderView"
            android:layout_width="match_parent"
            android:layout_height="530dp"
            android:backgroundTint="#2A2C2E" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@color/pastel_rainbow7"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/goCalBtn"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="#00ff0000"
            android:backgroundTint="#FDF6FE"
            android:src="@drawable/calendar"
            android:visibility="visible"
            app:cornerRadius="20dp"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/goListBtn"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="#00ff0000"
            android:backgroundTint="#FDF6FE"
            android:src="@drawable/calendarlist"
            android:visibility="visible"
            app:cornerRadius="20dp"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/goChart"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="#00ff0000"
            android:backgroundTint="#FDF6FE"
            android:src="@drawable/chart"
            android:visibility="visible"
            app:cornerRadius="20dp"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/goSocial"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="#00ff0000"
            android:backgroundTint="#FDF6FE"
            android:src="@drawable/social"
            android:visibility="visible"
            app:cornerRadius="20dp"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/goMypage"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="#00ff0000"
            android:backgroundTint="#FDF6FE"
            android:src="@drawable/mypage"
            android:visibility="visible"
            app:cornerRadius="20dp"
            tools:visibility="visible" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>