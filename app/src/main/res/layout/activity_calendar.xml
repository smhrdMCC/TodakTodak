<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbarSize="25dp"
    tools:context=".view.CalendarActivity">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FDF6FE"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/calendarPreBtn"
                android:layout_width="wrap_content"
                android:layout_height="55sp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/pastel_rainbow7"
                android:backgroundTint="@color/pastel_rainbow7"
                android:src="@drawable/ic_pre" />

            <TextView
                android:id="@+id/calendarMonthYearText"
                android:layout_width="0dp"
                android:layout_height="55sp"
                android:layout_gravity="center"
                android:layout_weight="3"
                android:background="@color/pastel_rainbow7"
                android:fontFamily="@font/squareround"
                android:gravity="center"
                android:text="4ì›” 2021"
                android:textAlignment="center"
                android:textColor="#5A5C69"
                android:textSize="28sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/calendarNextBtn"
                android:layout_width="wrap_content"
                android:layout_height="55sp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/pastel_rainbow7"
                android:backgroundTint="@color/pastel_rainbow7"
                android:src="@drawable/ic_next" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="0dp"
                android:layout_height="30sp"
                android:layout_weight="1"
                android:background="@color/gray"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:text="SUN"
                android:textAlignment="center"
                android:textColor="#F75D59"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="0dp"
                android:layout_height="30sp"
                android:layout_weight="1"
                android:background="@color/gray"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:text="MON"
                android:textAlignment="center"
                android:textColor="@color/main"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="0dp"
                android:layout_height="30sp"
                android:layout_weight="1"
                android:background="@color/gray"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:text="TUE"
                android:textAlignment="center"
                android:textColor="@color/main"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="0dp"
                android:layout_height="30sp"
                android:layout_weight="1"
                android:background="@color/gray"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:text="WED"
                android:textAlignment="center"
                android:textColor="@color/main"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="0dp"
                android:layout_height="30sp"
                android:layout_weight="1"
                android:background="@color/gray"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:text="THU"
                android:textAlignment="center"
                android:textColor="@color/main"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="0dp"
                android:layout_height="30sp"
                android:layout_weight="1"
                android:background="@color/gray"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:text="FRI"
                android:textAlignment="center"
                android:textColor="@color/main"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="0dp"
                android:layout_height="30sp"
                android:layout_weight="1"
                android:background="@color/gray"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:text="SAT"
                android:textAlignment="center"
                android:textColor="#1569C7"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout8"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@color/pastel_rainbow7"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/goCalBtn"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="#00ff0000"
            android:backgroundTint="#FDF6FE"
            android:src="@drawable/iconcalendar"
            android:visibility="visible"
            app:cornerRadius="20dp"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/goListBtn"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="#00ff0000"
            android:backgroundTint="#FDF6FE"
            android:src="@drawable/diary"
            android:visibility="visible"
            app:cornerRadius="20dp"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/goChart"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="#00ff0000"
            android:backgroundTint="#FDF6FE"
            android:src="@drawable/chart"
            android:visibility="visible"
            app:cornerRadius="20dp"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/goSocial"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="#00ff0000"
            android:backgroundTint="#FDF6FE"
            android:src="@drawable/social"
            android:visibility="visible"
            app:cornerRadius="20dp"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/goMypage"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="#00ff0000"
            android:backgroundTint="#FDF6FE"
            android:src="@drawable/admin"
            android:visibility="visible"
            app:cornerRadius="20dp"
            tools:visibility="visible" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/calenderView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:backgroundTint="#2A2C2E"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>