<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MyPageActivity">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="64dp">


            <TextView
                android:id="@+id/getUserNick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="20dp"
                android:hint="유저 닉네임"
                android:fontFamily="@font/roboto"
                android:textColor="@color/main"
                android:textStyle="bold"
                android:text="TextView"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/changeNickBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:textColor="@color/main"
            android:textStyle="bold"
            android:backgroundTint="@color/pastel_rainbow7"
            android:textSize="22sp"
            android:text="닉네임 변경" />

        <Button
            android:id="@+id/PCBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:textColor="@color/main"
            android:textStyle="bold"
            android:backgroundTint="@color/pastel_rainbow7"
            android:textSize="22sp"
            android:text="PC버전" />

        <Button
            android:id="@+id/requestBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:textColor="@color/main"
            android:textStyle="bold"
            android:backgroundTint="@color/pastel_rainbow7"
            android:textSize="22sp"
            android:text="문의하기" />

        <Button
            android:id="@+id/logoutBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:textColor="@color/main"
            android:backgroundTint="@color/pastel_rainbow7"
            android:textSize="22sp"
            android:textStyle="bold"
            android:text="로그아웃" />

        <Button
            android:id="@+id/withdrawBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:textColor="@color/main"
            android:backgroundTint="@color/pastel_rainbow7"
            android:textSize="22sp"
            android:textStyle="bold"
            android:text="회원 탈퇴" />

        <ImageView
            android:layout_width="300sp"
            android:layout_height="300sp"
            android:src="@drawable/gomgom"
            android:layout_gravity="center"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/pastel_rainbow7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/goCalBtn"
            android:layout_gravity="center"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_weight="1"
            android:background="#00ff0000"
            android:backgroundTint="#FDF6FE"
            android:src="@drawable/iconcalendar"
            android:visibility="visible"
            app:cornerRadius="20dp"
            tools:visibility="visible"/>

        <ImageView
            android:id="@+id/goListBtn"
            android:layout_gravity="center"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_weight="1"
            android:background="#00ff0000"
            android:backgroundTint="#FDF6FE"
            android:src="@drawable/diary"
            android:visibility="visible"
            app:cornerRadius="20dp"
            tools:visibility="visible"/>

        <ImageView
            android:id="@+id/goChart"
            android:layout_gravity="center"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_weight="1"
            android:background="#00ff0000"
            android:backgroundTint="#FDF6FE"
            android:src="@drawable/chart"
            android:visibility="visible"
            app:cornerRadius="20dp"
            tools:visibility="visible"/>

        <ImageView
            android:id="@+id/goSocial"
            android:layout_gravity="center"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_weight="1"
            android:background="#00ff0000"
            android:backgroundTint="#FDF6FE"
            android:src="@drawable/social"
            android:visibility="visible"
            app:cornerRadius="20dp"
            tools:visibility="visible"/>

        <ImageView
            android:id="@+id/goMypage"
            android:layout_gravity="center"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_weight="1"
            android:background="#00ff0000"
            android:backgroundTint="#FDF6FE"
            android:src="@drawable/admin"
            android:visibility="visible"
            app:cornerRadius="20dp"
            tools:visibility="visible"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>