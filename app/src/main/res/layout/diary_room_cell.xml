<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".adapter.DiaryRoomAdapter">

    <LinearLayout
        android:id="@+id/diaryRoomLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/diaryRoomDate"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:textSize="20sp"
            android:background="@color/pastel_color5"
            android:text="yyyy-mm-dd" />

        <TextView
            android:id="@+id/diaryRoomContent"
            android:layout_width="250dp"
            android:fontFamily="@font/roboto"
            android:background="@color/pastel_rainbow7"
            android:textSize="22sp"
            android:layout_height="wrap_content"
            android:text="일기 내용" />

        <TextView
            android:id="@+id/blank"
            android:fontFamily="@font/sehwace"
            android:textSize="25sp"
            android:layout_width="250dp"
            android:layout_height="30dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>